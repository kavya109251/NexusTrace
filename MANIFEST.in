# Include important files
include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt

# Include configuration files
recursive-include config *.json
recursive-include config *.yaml
recursive-include config *.yml

# Include web assets
recursive-include web/templates *.html
recursive-include web/static *.css
recursive-include web/static *.js
recursive-include web/static *.png
recursive-include web/static *.jpg
recursive-include web/static *.svg
recursive-include web/static *.ico

# Include YARA rules
recursive-include yara_rules *.yar
recursive-include yara_rules *.yara

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst

# Include scripts
recursive-include scripts *.py
recursive-include scripts *.sh

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude pytest.ini
exclude tox.ini
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .coverage
recursive-exclude * .pytest_cache
recursive-exclude * .mypy_cache
